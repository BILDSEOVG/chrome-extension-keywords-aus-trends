{
  "manifest_version": 3,
  "name": "Keyword Trends Finder",
  "version": "1.0",
  "description": "Find trending keywords from the current page text using Google Trends.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
